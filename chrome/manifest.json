{
  "manifest_version": 3,
  "name": "GitHub to JIRA Autolinker",
  "version": "1.0",
  "description": "Automatically converts text like PROJ-123 into JIRA links on GitHub.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configure JIRA URL"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
